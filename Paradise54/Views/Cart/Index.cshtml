@using EntityLayer.Concrete
@model List<CartItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<!----Sepet işlemleri-->
<!-- cart area start -->
<div class="cart-area pd-top-120 pd-bottom-120">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="table-responsive mb-4">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="blank"></th>
                                <th class="blank"></th>
                                <th class="blank"></th>
                                <th class="title-name">Ürünler</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Adet</th>
                                <th>Toplam Fiyat</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                <tr>
                    <td class="table-close-btn"><a href="#"><i class="ri-close-line"></i></a></td>
                    <th scope="row">

                        <div class="thumb">
                            <img src="@item.Food.Photo" style="width: auto; height: 90px;" alt="img">
                        </div>
                    </th>
                    <td colspan="2" class="item-name">
                        <div class="details">
                            <h5>@item.Food.Name</h5>
                        </div>
                    </td>
                    <td>₺ @item.Food.Price</td>
                    <td class="table-quantity">
                        <form>
                            <div class="quantity buttons_added">
                                <input type="number" class="input-text qty text" step="1" min="1" max="10000" name="quantity" value="1">

                            </div>
                        </form>
                    </td>
                    <td>₺ @item.Food.Price</td>
                </tr>}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-lg-8">
            </div>
            <div class="col-lg-4">
                <div class="order-cart-area">
                    <div class="order-cart">
                        <h5>SEPETİM</h5>
                        <ul>
                            <li class="total">Total<span>$50.00</span></li>
                        </ul>
                    </div>
                    <a class="btn btn-secondary w-100" href="#"> SİPARİŞİ ONAYLA</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- cart area end -->
